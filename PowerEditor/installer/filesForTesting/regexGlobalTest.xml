<NotepadPlus>
	<functionList>
		<!-- =========================================== [ regexGlobalTest ] -->
		<!-- Regular Expression Global Test                                  -->

		<parser
			displayName="RegexGlobalTest"
			id         ="regexGlobalTest"
		>
			<function
				mainExpr="\((?>[^()]|(?R))*\)"
			/>
		</parser>
	</functionList>
</NotepadPlus>